{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020"
    ],
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {},
    "typeRoots": [
      "./node_modules/@types/",
      "./typings.d.ts"
    ],
    "allowJs": true,
    "declaration": true,
    "downlevelIteration": true,
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ],
  "typeAcquisition": {
    "include": []
  }
}
